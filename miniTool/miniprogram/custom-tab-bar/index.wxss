/* 底部导航栏容器 */
.bottom-nav-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(15px);
  border-top: 1px solid rgba(233, 236, 239, 0.6);
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 9999;
  padding: 0 20rpx;
  box-shadow: 0 -2px 20px rgba(0, 0, 0, 0.06);
}

/* 导航项容器 */
.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

/* 导航项点击效果 */
.nav-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  opacity: 0;
  border-radius: 12rpx;
  transition: opacity 0.3s ease;
}

.nav-item:active::before {
  opacity: 0.08;
}

/* 选中状态 */
.nav-item-selected {
  background: linear-gradient(
    135deg,
    rgba(79, 172, 254, 0.1) 0%,
    rgba(0, 242, 254, 0.1) 100%
  );
  transform: translateY(-2rpx);
}

/* 图标样式 */
.nav-icon {
  font-size: 48rpx;
  line-height: 1;
  margin-bottom: 4rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
}

.nav-item-selected .nav-icon {
  font-size: 52rpx;
  transform: scale(1.1);
  filter: drop-shadow(0 2px 8px rgba(79, 172, 254, 0.3));
}

/* 文字样式 */
.nav-text {
  font-size: 22rpx;
  color: #999999;
  font-weight: 500;
  line-height: 1.2;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
}

.nav-item-selected .nav-text {
  color: #667eea;
  font-weight: 600;
  font-size: 24rpx;
  text-shadow: 0 1px 3px rgba(102, 126, 234, 0.2);
}

/* 选中指示器 */
.nav-item-selected::after {
  content: "";
  position: absolute;
  top: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 6rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 50%;
  box-shadow: 0 2px 6px rgba(79, 172, 254, 0.4);
}

/* 动画效果 */
.nav-item {
  transform-origin: center;
}

.nav-item:active {
  transform: scale(0.95);
}

.nav-item-selected:active {
  transform: translateY(-2rpx) scale(0.95);
}
