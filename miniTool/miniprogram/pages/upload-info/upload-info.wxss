/* 回传信息页面样式 */
.upload-info-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 任务信息区域 */
.task-info-section {
  margin: 30rpx;
}

.section-title {
  margin-bottom: 20rpx;
}

.section-title .title-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
}

.task-info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #7f8c8d;
  min-width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  flex: 1;
  word-break: break-all;
}

/* 表单区域 */
.upload-form-section {
  margin: 30rpx;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.required {
  font-size: 28rpx;
  color: #e74c3c;
  margin-left: 4rpx;
}

.form-input-wrapper {
  position: relative;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2c3e50;
  background: #f8f9fa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #007aff;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.form-input.error {
  border-color: #e74c3c;
  background: #fff5f5;
}

.form-input::placeholder {
  color: #bdc3c7;
}

.error-message {
  margin-top: 12rpx;
}

.error-text {
  font-size: 24rpx;
  color: #e74c3c;
}

/* 提交按钮区域 */
.submit-section {
  margin: 40rpx 30rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 122, 255, 0.4);
}

.submit-btn[disabled] {
  background: linear-gradient(135deg, #bdc3c7 0%, #95a5a6 100%);
  box-shadow: none;
  transform: none;
}

.btn-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 700;
}

/* 提示信息区域 */
.tips-section {
  margin: 30rpx;
}

.tips-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #f39c12;
}

.tips-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tips-icon {
  font-size: 32rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 700;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
}
