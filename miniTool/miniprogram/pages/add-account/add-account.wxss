/* 添加账号页面样式 */
.add-account-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 表单区域 */
.form-section {
  margin: 30rpx;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.required {
  font-size: 28rpx;
  color: #e74c3c;
  margin-left: 4rpx;
}

/* 输入框样式 */
.form-input-wrapper {
  position: relative;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2c3e50;
  background: #f8f9fa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #007aff;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.form-input.error {
  border-color: #e74c3c;
  background: #fff5f5;
}

.form-input::placeholder {
  color: #bdc3c7;
}

/* 选择器按钮样式 */
.picker-button {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.picker-display:active {
  border-color: #007aff;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.picker-text {
  font-size: 28rpx;
  color: #2c3e50;
}

.picker-text:empty::before {
  content: attr(placeholder);
  color: #bdc3c7;
}

.picker-arrow {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: bold;
}

/* 日期选择器样式 */
.date-picker {
  width: 100%;
}

.date-picker .picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.date-picker .picker-display:active {
  border-color: #007aff;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.date-picker .picker-text {
  font-size: 28rpx;
  color: #2c3e50;
}

.date-picker .picker-arrow {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 开关样式 */
.switch-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.switch-label {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 上传区域样式 */
.upload-section {
  width: 100%;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border: 2rpx dashed #bdc3c7;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  cursor: pointer;
}

.upload-area:active {
  border-color: #007aff;
  background: #f0f8ff;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 图片预览样式 */
.image-preview {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-actions {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  display: flex;
  gap: 8rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.delete-btn {
  background: rgba(231, 76, 60, 0.8);
}

.preview-btn {
  background: rgba(52, 152, 219, 0.8);
}

.btn-icon {
  font-size: 24rpx;
  color: #fff;
}

/* 错误信息样式 */
.error-message {
  margin-top: 12rpx;
}

.error-text {
  font-size: 24rpx;
  color: #e74c3c;
}

/* 提交按钮区域 */
.submit-section {
  margin: 40rpx 30rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 122, 255, 0.4);
}

.submit-btn[disabled] {
  background: linear-gradient(135deg, #bdc3c7 0%, #95a5a6 100%);
  box-shadow: none;
  transform: none;
}

.btn-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 700;
}

/* 提示信息区域 */
.tips-section {
  margin: 30rpx;
}

.tips-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #f39c12;
}

.tips-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tips-icon {
  font-size: 32rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 700;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
}
