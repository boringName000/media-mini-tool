<!--pages/layout-tool/layout-tool.wxml-->
<view class="layout-tool-container">
  <view class="tool-section">
    <!-- 操作按钮 -->
    <view class="action-buttons">
      <button class="action-btn secondary" bindtap="clearAllArticles" wx:if="{{articleInfoList.length > 0}}">清空所有文章</button>
    </view>
    
    <!-- 文章列表 -->
    <view class="article-list-section" wx:if="{{articleInfoList.length > 0}}">
      <view class="section-subtitle">文章列表 ({{articleInfoList.length}})</view>
      <view class="article-list">
        <view class="article-item" wx:for="{{articleInfoList}}" wx:key="id">
          <view class="article-info">
            <view class="article-header">
              <text class="article-title">{{item.title}}</text>
              <view class="article-actions">
                <button class="article-action-btn preview-btn" bindtap="previewArticle" data-article="{{item}}">预览</button>
                <button class="article-action-btn delete-btn" bindtap="deleteArticle" data-article="{{item}}">删除</button>
              </view>
            </view>
            <view class="article-details">
              <text class="article-track">赛道: {{item.trackTypeName}}</text>
              <text class="article-platform">平台: {{item.platformTypeName}}</text>
              <text class="article-time">保存时间: {{item.downloadTimeFormatted}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    
    <!-- 无文章提示 -->
    <view class="no-data" wx:if="{{articleInfoList.length === 0}}">
      <view class="no-data-icon">📄</view>
      <text class="no-data-text">暂无本地文章</text>
      <text class="no-data-hint">文章信息将自动从本地存储加载</text>
    </view>
  </view>
</view>
