/* 数据中心页面样式 */
.data-center-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 我的账号区域 */
.my-account-area {
  margin-bottom: 20rpx;
}

.account-header {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.account-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.account-info {
  flex: 1;
}

.account-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.account-desc {
  font-size: 24rpx;
  color: #666;
}

/* 账号列表 */
.account-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.account-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.account-platform {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 80rpx;
}

.platform-icon {
  font-size: 40rpx;
}

.platform-text {
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

.account-details {
  flex: 1;
}

.account-main-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.account-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.account-id {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.account-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.account-status.normal {
  background-color: #f6ffed;
  color: #52c41a;
}

.account-status.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.account-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.publish-info,
.articles-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

.info-value {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 600;
}

.track-type {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.track-icon {
  font-size: 24rpx;
}

.track-text {
  font-size: 24rpx;
  color: #666;
}

.report-status {
  display: flex;
  align-items: center;
}

.reported-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #f6ffed;
  border-radius: 8rpx;
}

.status-icon {
  font-size: 24rpx;
}

.status-text {
  font-size: 24rpx;
  color: #52c41a;
  font-weight: bold;
}

.report-button {
  padding: 12rpx 28rpx;
  background-color: #1890ff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 90rpx;
  height: 48rpx;
  transition: all 0.3s ease;
}

.report-button:active {
  transform: scale(0.95);
  background-color: #096dd9;
}

.button-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: bold;
}
