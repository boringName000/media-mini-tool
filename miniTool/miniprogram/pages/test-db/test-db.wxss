/* pages/test-db/test-db.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-bottom: 2rpx solid #e0e0e0;
  padding-bottom: 10rpx;
}

.input-section {
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.button-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.add-btn {
  width: 100%;
  height: 80rpx;
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.invitation-btn {
  width: 100%;
  height: 80rpx;
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.verify-btn {
  width: 100%;
  height: 80rpx;
  background-color: #52c41a;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.delete-btn {
  width: 100%;
  height: 80rpx;
  background-color: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.clear-btn {
  width: 100%;
  height: 80rpx;
  background-color: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.result-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.result-content {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
}

.result-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.result-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  min-width: 120rpx;
  margin-right: 20rpx;
}

.value {
  color: #333;
  word-break: break-all;
}

.invitation-code {
  font-family: "Courier New", monospace;
  font-weight: bold;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  border: 1rpx solid #91d5ff;
}

.error-text {
  color: #ff4d4f;
  background-color: #fff2f0;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  border: 1rpx solid #ffccc7;
}
