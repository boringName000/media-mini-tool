/* 测试数据库页面样式 - 预留页面 */

.test-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.test-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 预留内容区域 */
.content-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  margin-bottom: 40rpx;
}

.placeholder-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.placeholder-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.placeholder-subtitle {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
  max-width: 400rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 40rpx;
}

.action-btn {
  padding: 24rpx 48rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  min-width: 160rpx;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.primary:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.action-btn.secondary {
  background-color: #6c757d;
  color: #fff;
}

.action-btn.secondary:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .test-container {
    padding: 15rpx;
  }

  .test-section {
    padding: 30rpx 20rpx;
  }

  .content-area {
    padding: 60rpx 20rpx;
  }

  .placeholder-icon {
    font-size: 100rpx;
  }

  .placeholder-title {
    font-size: 30rpx;
  }

  .placeholder-subtitle {
    font-size: 26rpx;
  }

  .action-btn {
    padding: 20rpx 40rpx;
    font-size: 26rpx;
    min-width: 140rpx;
  }
}
