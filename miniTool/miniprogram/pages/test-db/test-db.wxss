/* 测试数据库页面样式 */
.test-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.test-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #007aff;
  padding-bottom: 10rpx;
}

.test-btn {
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.test-btn:active {
  opacity: 0.8;
}

.result-display {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #007aff;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.result-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.result-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 无数据提示样式 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.no-data-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.no-data-hint {
  font-size: 24rpx;
  color: #999;
}

/* 文件下载测试样式 */
.download-status {
  background: #f8f9fa;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 8rpx;
  border-left: 4rpx solid #007aff;
}

.status-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.file-list {
  margin: 20rpx 0;
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin: 10rpx 0;
  background: #fff;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  cursor: pointer;
}

.file-item:active {
  background: #f8f9fa;
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.file-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 20rpx;
  word-break: break-all;
}

.file-size {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
  white-space: nowrap;
}

.file-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}

/* 文件预览样式 */
.file-preview {
  margin: 20rpx 0;
  background: #fff;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.preview-header {
  background: #f8f9fa;
  padding: 20rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.preview-filename {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.preview-content {
  padding: 20rpx;
  max-height: 600rpx;
  overflow-y: auto;
  background: #fafafa;
}

.content-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
  font-family: "Courier New", monospace;
}

/* 预览标题行样式 */
.preview-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

/* 查看效果按钮样式 */
.view-effect-btn {
  background-color: #28a745;
  color: #fff;
  border: none;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  min-width: 120rpx;
  height: auto;
  line-height: 1.4;
}

.view-effect-btn:active {
  opacity: 0.8;
}
