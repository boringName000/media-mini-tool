/* 测试数据库页面样式 */
.test-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.test-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #007aff;
  padding-bottom: 10rpx;
}

.test-btn {
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.test-btn:active {
  opacity: 0.8;
}

.result-display {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #007aff;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.result-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.result-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 账户信息展示样式 */
.account-info {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e0e0e0;
}

.account-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.account-item:last-child {
  border-bottom: none;
}

.account-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.account-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.account-screenshot {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
}

.image-label {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  text-align: center;
}

.test-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ddd;
  background-color: #f5f5f5;
  object-fit: cover;
}

.test-image.large-image {
  width: 400rpx;
  height: 300rpx;
  object-fit: contain; /* 使用contain保持比例，显示完整图片 */
  background-color: #f8f9fa;
  border: 2rpx solid #e0e0e0;
}

.image-url {
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
  word-break: break-all;
  text-align: center;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 无数据提示样式 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.no-data-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.no-data-hint {
  font-size: 24rpx;
  color: #999;
}
