/* 账号列表页面样式 */
.account-list-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-top: 30rpx;
  padding-bottom: 40rpx;
}

/* 账号列表区域 */
.account-list-section {
  padding: 0 30rpx;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e1e8ed;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  text-align: center;
}

/* 账号列表样式 */
.account-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.account-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.account-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

/* 账号头部信息 */
.account-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.account-info {
  flex: 1;
}

.account-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.account-name {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 700;
}

.audit-status {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  min-width: 80rpx;
  text-align: center;
}

.audit-text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 600;
}

.account-id-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.account-id {
  font-size: 26rpx;
  color: #7f8c8d;
}

.violation-tag {
  background: #e74c3c;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.violation-text {
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
}

.platform-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.platform-icon {
  font-size: 40rpx;
}

.platform-name {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 账号详细信息 */
.account-details {
  margin-bottom: 24rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-item {
  display: flex;
  align-items: center;
}

.detail-label {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-right: 8rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 600;
}

/* 操作按钮 */
.account-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.action-btn {
  width: auto;
  min-width: 120rpx;
  height: 56rpx;
  border: none;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  padding: 0 24rpx;
}

.action-btn:active {
  transform: scale(0.95);
}

.edit-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

.action-icon {
  font-size: 20rpx;
}

.action-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}

/* 统计信息样式 */
.stats-section {
  padding: 0 30rpx 20rpx;
}

.stats-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-around;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stats-number {
  font-size: 36rpx;
  color: #007aff;
  font-weight: 700;
}

.stats-label {
  font-size: 24rpx;
  color: #7f8c8d;
}
