/* 协议页面样式 */
.agreement-container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 30rpx 30rpx 0 30rpx; /* 移除底部padding，为固定按钮留空间 */
  display: flex;
  flex-direction: column;
  position: relative;
}

.agreement-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  flex: 1;
  margin-bottom: 140rpx; /* 为固定按钮留出空间 */
}

.agreement-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

.agreement-text {
  line-height: 1.6;
}

/* 引言部分样式 */
.intro-section {
  margin-bottom: 40rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  border-left: 6rpx solid #007aff;
}

.intro-text {
  display: block;
  font-size: 28rpx;
  color: #007aff;
  line-height: 1.7;
  font-weight: 500;
}

/* 章节样式 */
.section {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.section-content {
  display: block;
  font-size: 28rpx;
  color: #34495e;
  line-height: 1.7;
  text-align: justify;
}

/* 子项目样式 */
.sub-item {
  display: block;
  font-size: 28rpx;
  color: #34495e;
  line-height: 1.7;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  position: relative;
}

.sub-item:last-child {
  margin-bottom: 0;
}

.sub-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 14rpx;
  width: 8rpx;
  height: 8rpx;
  background: #007aff;
  border-radius: 50%;
}

/* 项目符号列表样式 */
.bullet-list {
  margin-top: 12rpx;
  padding-left: 20rpx;
}

.bullet-item {
  display: block;
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.6;
  margin-bottom: 8rpx;
  padding-left: 16rpx;
}

.bullet-item:last-child {
  margin-bottom: 0;
}

/* 更新日期样式 */
.update-date {
  margin-top: 40rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #e9ecef;
  text-align: center;
}

.date-text {
  font-size: 24rpx;
  color: #8e8e93;
  font-style: italic;
}

/* 保持原有的段落样式作为备用 */
.paragraph {
  display: block;
  font-size: 28rpx;
  color: #34495e;
  margin-bottom: 24rpx;
  text-align: justify;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 底部按钮区域样式 */
.button-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx 40rpx 30rpx; /* 增加底部padding，为安全区域留空间 */
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.button-container {
  display: flex;
  gap: 20rpx;
}

.disagree-btn,
.agree-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.disagree-btn {
  background: #f8f9fa;
  border: 2rpx solid #dee2e6;
}

.disagree-btn:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.agree-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  box-shadow: 0 4rpx 20rpx rgba(0, 122, 255, 0.3);
}

.agree-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 122, 255, 0.4);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

.disagree-btn .btn-text {
  color: #6c757d;
}

.agree-btn .btn-text {
  color: #fff;
}
