/* pages/article-preview/article-preview.wxss */

.article-preview-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 文章标题显示 */
.article-title-container {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.article-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  word-break: break-all;
  line-height: 1.4;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.error-icon-placeholder {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  color: #ff6b6b;
  background-color: #fff5f5;
  border-radius: 50%;
  border: 4rpx solid #ff6b6b;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.retry-btn {
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 复制按钮 */
.copy-button-container {
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  justify-content: center;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.copy-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  flex: 1;
  max-width: 300rpx;
}

.copy-btn:active {
  transform: translateY(1rpx);
  opacity: 0.9;
}

/* 文章内容容器 */
.article-content-container {
  flex: 1;
  padding: 30rpx;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* mp-html 组件样式 */
.article-content {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC",
    "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial,
    sans-serif;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .article-title-container {
    padding: 15rpx 20rpx;
  }

  .copy-button-container {
    padding: 15rpx 20rpx;
    gap: 15rpx;
  }

  .copy-btn {
    max-width: 250rpx;
    padding: 14rpx 24rpx;
    font-size: 26rpx;
  }

  .article-content-container {
    margin: 10rpx;
    padding: 20rpx;
  }
}
