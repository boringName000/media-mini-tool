/* pages/article-preview/article-preview.wxss */
.article-preview-container {
  width: 100%;
  height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 错误状态 */
.error-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 60rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.error-text {
  font-size: 28rpx;
  color: #dc3545;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
  max-width: 500rpx;
}

.retry-btn {
  margin: 10rpx;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  min-width: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

/* web-view 容器 */
.webview-container {
  flex: 1;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

/* 准备状态容器 */
.preparing-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
  padding: 80rpx 40rpx;
  color: #fff;
}

.preparing-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  /* 移除弹跳动画，使用静态图标 */
}

.preparing-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  text-align: center;
  line-height: 1.4;
}

.preparing-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  text-align: center;
  margin-bottom: 50rpx;
  line-height: 1.5;
}

.preparing-status {
  width: 100%;
  max-width: 400rpx;
  text-align: center;
}

.status-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* 等待状态 */
.waiting-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.waiting-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.waiting-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .loading-container,
  .error-container,
  .waiting-container,
  .preparing-container {
    margin: 15rpx;
    padding: 40rpx 30rpx;
  }

  .preparing-container {
    padding: 60rpx 30rpx;
  }

  .preparing-icon {
    font-size: 80rpx;
  }

  .preparing-title {
    font-size: 32rpx;
  }

  .preparing-subtitle {
    font-size: 26rpx;
  }

  .retry-btn {
    padding: 18rpx 35rpx;
    font-size: 26rpx;
    min-width: 140rpx;
  }
}
